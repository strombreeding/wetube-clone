{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES6" ,
        "module": "CommonJS",
        "lib":["ES6","DOM"],
        "allowJs":true,
        "esModuleInterop": true, 
        "strict":true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports" : true,
        "resolveJsonModule" : true, //use JSON
        "noImplicitAny":true,
        "jsx": "react",
        
    }
}